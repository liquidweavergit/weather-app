# Temperature Display App Environment Variables
# Copy this file to .env and fill in your actual values

# Application Environment
ENVIRONMENT=development

# Database Configuration (Docker service names)
DATABASE_URL=postgresql+asyncpg://postgres:password@db:5432/temperature_app

# Redis Cache Configuration (Docker service names)
REDIS_URL=redis://redis:6379/0

# Weather API Configuration
WEATHER_API_KEY=your_openweathermap_api_key_here
FALLBACK_WEATHER_API_KEY=your_accuweather_api_key_here

# Security
SECRET_KEY=your_super_secret_key_minimum_32_characters_long

# API Configuration
API_RATE_LIMIT=60  # requests per minute
CACHE_TTL=300      # cache time-to-live in seconds

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# External Services
GEOLOCATION_API_KEY=optional_geolocation_service_key

# Development Settings (development only)
DEBUG=true
RELOAD=true

# Docker Database Settings
POSTGRES_DB=temperature_app
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password

# Docker Application Settings
APP_PORT=8000
APP_HOST=0.0.0.0 